<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".VerifiqueEmailActivity">

    <ImageView
        android:contentDescription="@string/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:alpha="0.5"
        app:srcCompat="@drawable/whatsapp_background" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="100dp"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/email" />

        <TextView
            android:id="@+id/tvEmail"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@example.com" />

        <TextView
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verifique seu e-mail para completar o cadastro. Foi enviado um e-mail para o endereço cadastrado com o intuinto de confirmação."
            android:gravity="center_horizontal"/>

        <Button
            android:textColor="@color/white"
            android:id="@+id/btnVerifiquei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="2dp"
            android:backgroundTint="@color/colorAccent"
            android:padding="16dp"
            android:paddingEnd="40dp"
            android:paddingStart="40dp"
            android:text="Verifiquei" />
        <Button
            android:textColor="@color/white"
            android:id="@+id/btnReenviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:padding="16dp"
            android:paddingEnd="40dp"
            android:paddingStart="40dp"
            android:text="Não Recebi o E-mail" />

    </LinearLayout>

    <Button
        android:textColor="@color/white"
        android:id="@+id/btnSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Sair" />


</RelativeLayout>